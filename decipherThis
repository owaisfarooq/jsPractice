function cipherThis(str) {
    return str.split(" ").map( word => {
        if (word.length > 2) {
            let temp = word[1];
            word[1] = word[word.length -2]
            word[word.length -2] = temp
        }
        word[0] = word.charCodeAt(0)
        return word
    }).join(" ")
}


